.left_content
  = link_to edit_user_registration_path do
    %i.fa.fa-cog
  = link_to new_group_path do
    %i.fa.fa-pencil-square-o.user__icon
  .user
    %p.user__name
      - if user_signed_in?
        = current_user.name

  .left_content_chat
    %ul
      - message.each do |message|
        %li
          = message.name
